{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/auth(.*)",
      "dest": "backend/api/auth.js"
    },
    {
      "src": "/api/balance(.*)",
      "dest": "backend/api/balance.js"
    },
    {
      "src": "/api/lotteries(.*)",
      "dest": "backend/api/lotteries.js"
    },
    {
      "src": "/api/upload-avatar(.*)",
      "dest": "backend/api/uploadAvatar.js"
    },
    {
      "src": "/api/user/(.*)/status",
      "dest": "backend/api/userStatus.js"
    },
    {
      "src": "/api/init-payment-system(.*)",
      "dest": "backend/api/initPaymentSystem.js"
    },
    {
      "src": "/api/init-conversion-rates(.*)",
      "dest": "backend/api/initConversionRates.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}
